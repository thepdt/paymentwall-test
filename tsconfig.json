{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@Components/*": ["./src/components/*"],
      "@Styles/*": ["./src/css/*"],
      "@Types/*": ["./src/interfaces/*"],
      "@Boot/*": ["./src/boot/*"]
    }
  },
  "exclude": ["node_modules"]
}
